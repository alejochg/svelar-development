<!DOCTYPE html>
<html>
<head>
    <title>Svelar - Contact us</title>
    <%include templates/meta.ejs%>
    <%include templates/bootstrap.ejs%>
    <link rel='stylesheet' href='/stylesheets/footer.css' />
    <link rel='stylesheet' href='/stylesheets/secondaryheader.css' />
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script>
        function onSubmit(token) {
            document.getElementById('contact_form').submit();
        }
    </script>
</head>
<body>
<% include templates/navigation.ejs%>
<div class="container-fluid">
    <% include templates/secondary_header.ejs%>
    <% include templates/errormessages.ejs%>
    <div class="row" id="third">
        <div id="contact_title" class="col-md-12">
            <p>Contact Us</p>
        </div>
    </div>
    <form id="contact_form" action="../about/contact" method="post">
        <div class="row" id="fourth">
            <div id="contact_type" class="col-md-12">
                <p>Reason for your message: </p>
                <select name="reason" required>
                    <option value="general inquiry">General inquiry about Svelar</option>
                    <option value="account issues">Account or login issues</option>
                    <option value="website problems">Report a website problem</option>
                </select>
            </div>
        </div>

        <div class="row" id="fifth">
            <div id="name_col" class="col-md-12">
                <div class="row" id="fifth_one">
                    <div id="message_info_title" class="col-md-12">
                        <p>Your Information:</p>
                    </div>
                </div>
                <div class="row" id="fifth_two">
                    <div id="message_firstname" class="col-md-3">
                        <input type="text" id="name" name="name" placeholder="First Name" required>
                    </div>
                    <div id="message_lastname" class="col-md-3">
                        <input type="text" id="lastname" name="lastname" placeholder="Last Name" required>
                    </div>
                    <div id="message_email" class="col-md-3">
                        <input type="email" id="email" name="email" placeholder="Email" required>
                    </div>
                </div>
            </div>
        </div>

        <div class="row" id="sixth">
            <div id="website_col" class="col-md-12">
                <div class="row" id="sixth_one">
                    <div id="message_title" class="col-md-12">
                        <p>Your Message:</p>
                    </div>
                </div>
                <div class="row" id="sixth_two">
                    <div id="message_input" class="col-md-12">
                        <textarea type="text" id="message" name="message" placeholder="How can we help you?"  required></textarea>
                    </div>
                </div>
            </div>
        </div>

        <div class="row" id="seventh">
            <div id="human_col" class="col-md-12">
                <div class="row" id="seventh_one">
                    <div id="human_title" class="col-md-12">
                        <p>Prove You're Human: </p>
                    </div>
                </div>
                <div class="row" id="seventh_two">
                    <div id="human_input" class="col-md-12">
                        <input type="text" name="checkWord" placeholder="Please type the word 'blue' to prove you are human." required>
                    </div>
                </div>
            </div>
        </div>

        <div class="row" id="eighth">
            <div id="message_bottom" class="col-md-12">
                <div id="message_button" class="col-md-12">
                    <input type="submit" value="Send" id="send_button">
                    <a href="/">Cancel</a>
                </div>
            </div>
        </div>
    </form>

    <% include templates/footerbar.ejs%>
</div>
</body>
</html>

<script>
    <%if (typeof previousInput != 'undefined'){%>
        document.getElementById("name").defaultValue = "<%= previousInput.name %>"
        document.getElementById("lastname").defaultValue = "<%= previousInput.lastname %>"
        document.getElementById("email").defaultValue = "<%= previousInput.email %>"
        document.getElementById("message").defaultValue = "<%= previousInput.message %>"
    <% } %>
</script>


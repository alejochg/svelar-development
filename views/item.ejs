<!DOCTYPE html>
<html>
<head>
    <title><%= stuff[0].name %> - Svelar </title>
    <link rel='stylesheet' href='/stylesheets/item.css' />
    <link rel='stylesheet' href='/stylesheets/footer.css' />
    <link rel='stylesheet' href='/stylesheets/secondaryheader.css' />
    <%include templates/meta.ejs%>
    <%include templates/bootstrap.ejs%>
</head>
<body>
    <% include templates/navigation.ejs%>
<div class="container-fluid">

    <% include templates/secondaryheader.ejs%>

    <% include templates/errormessages.ejs%>

    <div class="row" id="third">
        <!-- Item name and tag-->
        <div class="row" id="third_first">
            <div id="empty" class="col-md-2">
                <!-- This is to make space -->
            </div>
            <% if(stuff[0].svelar == 1 && stuff[0].premium != 1){ %>
            <div id="svelar" class="col-md-1">
                <p>Svelar</p>
            </div>
            <div id="item_name" class="col-md-9">
                    <p><%= stuff[0].name %></p>
            </div>
            <%}else if(stuff[0].premium == 1){%>
            <div id="ad" class="col-md-1">
                <p>AD</p>
            </div>
            <div id="item_name" class="col-md-9">
                    <p><%= stuff[0].name %></p>
            </div>
            <%}else{%>
            <div id="item_name_reg" class="col-md-10">
                    <p><%= stuff[0].name %></p>
            </div>
            <%}%>
        </div>
        <!-- Item information -->
        <div class="row" id="third_second">
            <div id="empty" class="col-md-2">
                <!-- space -->
            </div>
            <!-- Item images -->
            <div id="prod_image_1" class="col-md-2">
                <img id="item_image" src="<%= stuff[0].image_1 %>">
            </div>
            <div id="prod_image_1" class="col-md-2">
                <img id="item_image" src="<%= stuff[0].image_2 %>">
            </div>
            <!-- Item buttons  -->
            <div id="item_information" class="col-md-4">
                <div class="row" id="button_block">
                    <div id="review_button" class="col-md-5">
                        <a href="/review/item/<%= stuff[0].id %>"><span>☆</span> Review</a>
                    </div>
                    <div id="like_button" class="col-md-3">
                        <a href="like.ejs">Like!</a>
                    </div>
                    <div id="like_button" class="col-md-3">
                        <a href="dislike.ejs">Dislike</a>
                    </div>
                </div>
                <!-- Ratings -->
                <div class="row" id="ratings_block">
                    <div id="ratings" class="col-md-12">
                        <p>
                            Cost: <span>☆</span><span>☆</span><span>☆</span><span>☆</span><span>☆</span>
                            <br>
                            Comfort:<span>☆</span><span>☆</span><span>☆</span><span>☆</span><span>☆</span>
                            <br>
                            Ease of Use: <span>☆</span><span>☆</span><span>☆</span><span>☆</span><span>☆</span>
                        </p>
                    </div>
                </div>
                <!-- Keyword -->
                <div class="row" id="keywords_block">
                    <div id="keywords" class="col-md-12">
                        <p>keywords:
                            <a href="/search/try?category=<%=  stuff[0].category %>&page=1"><%= stuff[0].category %></a>,
                            <a href="/search/try?type=<%= stuff[0].type %>&page=1"><%= stuff[0].type %></a>,
                            <a href="/search/try?brand=<%= stuff[0].brand %>&page=1"><%= stuff[0].brand %></a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <!-- Description section -->
        <div class="row" id="third_third">
            <div id="empty" class="col-md-2">
                <!-- Emptuy space-->
            </div>
            <div id="description" class="col-md-7">
                <p><%= stuff[0].description %></p>
            </div>
        </div>
        <!-- Outside svelar item links -->
        <div class="row" id="third_fourth">
            <div id="empty" class="col-md-2">
                <!-- Emptuy space-->
            </div>
            <div id="buy" class="col-md-10">
                    <a href="<%= stuff[0].link %>" target="_blank">Product website</a>,
                    <a href="<%= stuff[0].buy_link %>" target="_blank">Buy</a>
            </div>
        </div>
    </div>


    <!-- Reviews section-->
    <div class="row" id="fourth">
        <div class="row" id="fourth_first">
            <div id="empty" class="col-md-2">
                <!-- Emptuy space-->
            </div>
            <div id="people_reviews" class="col-md-8">
                <h3> Reviews </h3>
                <% if (reviews_rows > 0) {%>
                <% for(var i=0; i<=reviews_rows-1; i++) {%>
                <p id="user_review"> <em> <%= reviews[i].username %> </em>  | <%= reviews[i].date.toString().substring(3, 15) %> </p>
                <p> "<%= reviews[i].comment %>" </p>
                <p id="stars">
                    Comfort:
                    <% if(Math.round(reviews[i].rating_1)== 0){ %>
                    <span id="starts">☆ ☆ ☆ ☆ ☆</span>
                    <%}%>
                    <% if(Math.round(reviews[i].rating_1)== 1){ %>
                    <span id="starts">&#9733 ☆ ☆ ☆ ☆</span>
                    <%}%>
                    <% if(Math.round(reviews[i].rating_1)== 2){ %>
                    <span id="starts">&#9733 &#9733 ☆ ☆ ☆</span>
                    <%}%>
                    <% if(Math.round(reviews[i].rating_1)== 3){ %>
                    <span id="starts">&#9733 &#9733 &#9733 ☆ ☆</span>
                    <%}%>
                    <% if(Math.round(reviews[i].rating_1)== 4){ %>
                    <span id="starts">&#9733 &#9733 &#9733 &#9733 ☆</span>
                    <%}%>
                    <% if(Math.round(reviews[i].rating_1)== 5){ %>
                    <span id="starts">&#9733 &#9733 &#9733 &#9733 &#9733</span>
                    <%}%>
                    <br>
                    Easyness:
                    <% if(Math.round(reviews[i].rating_2)== 0){ %>
                    <span id="starts">☆ ☆ ☆ ☆ ☆</span>
                    <%}%>
                    <% if(Math.round(reviews[i].rating_2)== 1){ %>
                    <span id="starts">&#9733 ☆ ☆ ☆ ☆</span>
                    <%}%>
                    <% if(Math.round(reviews[i].rating_2)== 2){ %>
                    <span id="starts">&#9733 &#9733 ☆ ☆ ☆</span>
                    <%}%>
                    <% if(Math.round(reviews[i].rating_2)== 3){ %>
                    <span id="starts">&#9733 &#9733 &#9733 ☆ ☆</span>
                    <%}%>
                    <% if(Math.round(reviews[i].rating_2)== 4){ %>
                    <span id="starts">&#9733 &#9733 &#9733 &#9733 ☆</span>
                    <%}%>
                    <% if(Math.round(reviews[i].rating_2)== 5){ %>
                    <span id="starts">&#9733 &#9733 &#9733 &#9733 &#9733</span>
                    <%}%>
                    <br>
                    Cost:
                    <% if(Math.round(reviews[i].rating_3)== 0){ %>
                    <span id="starts">☆ ☆ ☆ ☆ ☆</span>
                    <%}%>
                    <% if(Math.round(reviews[i].rating_3)== 1){ %>
                    <span id="starts">&#9733 ☆ ☆ ☆ ☆</span>
                    <%}%>
                    <% if(Math.round(reviews[i].rating_3)== 2){ %>
                    <span id="starts">&#9733 &#9733 ☆ ☆ ☆</span>
                    <%}%>
                    <% if(Math.round(reviews[i].rating_3)== 3){ %>
                    <span id="starts">&#9733 &#9733 &#9733 ☆ ☆</span>
                    <%}%>
                    <% if(Math.round(reviews[i].rating_3)== 4){ %>
                    <span id="starts">&#9733 &#9733 &#9733 &#9733 ☆</span>
                    <%}%>
                    <% if(Math.round(reviews[i].rating_3)== 5){ %>
                    <span id="starts">&#9733 &#9733 &#9733 &#9733 &#9733</span>
                    <%}%>
                </p>
                </p>
                <% }%>
                <%}else {%>
                <p>There is not reviews for this product yet.</p>
                <%}%>
            </div>
            <div id="empty" class="col-md-2">
                <!-- Emptuy space-->
            </div>
        </div>
    </div>


    <% include templates/footerbar.ejs%>
</div>
</body>
</html>
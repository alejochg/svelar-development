<!-- This is list column-->
<!-- Item image -->
<div id="prod_image_1" class="col-md-3">
    <a href="../item/<%= stuff[i].id %>">
        <img src="<%= stuff[i].image_1 %>">
    </a>
</div>
<!-- Item informaiton -->
<div id="content_prod" class="col-md-7">
    <!-- Item name and tag-->
    <div class="row" id="fourth_first">
        <div id="item_information" class="col-md-12">
            <% if(stuff[i].svelar == 1 && stuff[i].premium != 1){ %>
            <div id="svelar" class="col-md-2">
                <p>Svelar</p>
            </div>
            <div id="item_name" class="col-md-7">
                <a href="../item/<%= stuff[i].id %>">
                    <p><%= stuff[i].name %></p>
                </a>
            </div>
            <%}else if(stuff[i].premium == 1){%>
            <div id="ad" class="col-md-2">
                <p>AD</p>
            </div>
            <div id="item_name" class="col-md-7">
                <a href="../item/<%= stuff[i].id %>">
                    <p><%= stuff[i].name %></p>
                </a>
            </div>
            <%}else{%>
            <div id="item_name_reg" class="col-md-9">
                <a href="../item/<%= stuff[i].id %>">
                    <p><%= stuff[i].name %></p>
                </a>
            </div>
            <%}%>
        </div>
    </div>

    <!-- Ratings and buttons -->

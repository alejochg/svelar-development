<div id="pages_links" class="col-md-6">
    <p id="testing"></p>
    <script>
        // count how many items where retrieved from database using specified criteria
        // divided by 10 because 10 items are shown per page
        var c = <%= count[0].count%>/10;
        // rounds up
        c = Math.ceil(c);
        goPage(c);
        function goPage(pages) { // Modify the links of the url so user can navigate between search list pages
            for (var i = 1; i<pages+1; i++){
                // get website path from window object
                var str = window.location.pathname + window.location.search.toString();
                // get query variable to know check current page number
                var checkPagesNumber = getParameterByName('page')
                if(checkPagesNumber > 10){
                    str = str.substring(0, str.length - 2); // remove the page character number
                }else{
                    str = str.substring(0, str.length - 1);
                }
                str += i.toString(); // add new page character number

                var para = document.createElement('a');
                var node = document.createTextNode(i.toString());
                para.appendChild(node);
                if(<%= page %> != i){
                    para.href = str;
                    para.id = 'pages';
                }else {
                    para.id = 'pages_selected';
                }
                var element = document.getElementById('pages_links');
                element.appendChild(para);
            }
        }

        function getParameterByName(name, url) { // this function allows to get query variables. Obtauned from https://stackoverflow.com/questions/901115/how-can-i-get-query-string-values-in-javascript
            if (!url) url = window.location.href;
            name = name.replace(/[\[\]]/g, "\\$&");
            var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
                results = regex.exec(url);
            if (!results) return null;
            if (!results[2]) return '';
            return decodeURIComponent(results[2].replace(/\+/g, " "));
        }
    </script>
</div>
